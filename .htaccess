# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    # Файлы с версионированием кешируются долго
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    ExpiresByType application/json "access plus 0 seconds"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
    # Изображения кешируются долго
    <FilesMatch "\.(jpg|jpeg|png|gif|svg|webp|ico)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # Файлы с версионированием (с ?v=) кешируются долго
    <FilesMatch "\.(css|js)$">
        # Если есть query параметр версии, кешируем долго
        SetEnvIf QueryString "^v=" HAS_VERSION
        Header set Cache-Control "max-age=31536000, public, immutable" env=HAS_VERSION
        # Если версии нет, не кешируем
        Header set Cache-Control "max-age=0, must-revalidate" env=!HAS_VERSION
    </FilesMatch>
    
    # HTML файлы не кешируются
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=0, must-revalidate, no-cache"
    </FilesMatch>
</IfModule>

# Remove ETags
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Security: Block access to .git directory and all subdirectories
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^\.git - [F,L]
</IfModule>

# Block access to .git directory (Apache 2.4+)
<DirectoryMatch "^.*/\.git/">
    Require all denied
</DirectoryMatch>

# Block access to .git files and directories
<FilesMatch "^\.git">
    Require all denied
</FilesMatch>

